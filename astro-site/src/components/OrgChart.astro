            <div class={getEmployeeClass(dataAnalyticsPM)}>
              <div class="member-name">{dataAnalyticsPM.name}</div>
              <div class="member-title">{dataAnalyticsPM.title}</div>
            </div>
          </div>
        )}
        
        <!-- Program Manager's Direct Reports -->
        {dataAnalyticsDirectReports.length > 0 && (
          <div class="team-members" style="margin-top: 10px;">
            {dataAnalyticsDirectReports.map(member => (
              <div class={getEmployeeClass(member)}>
