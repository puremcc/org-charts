  <!-- Director Level -->
  {director && (
    <>
      <div class="leadership-level">
        <div class="person-card leadership">
          <div class="person-name">{director.name}</div>
          <div class="person-title">{director.title}</div>
        </div>
      </div>
      <div class="connector"></div>
    </>
  )}

  <!-- Program Manager Level -->
  {programManager && (
    <>
      <div class="leadership-level">
        <div class="person-card leadership">
